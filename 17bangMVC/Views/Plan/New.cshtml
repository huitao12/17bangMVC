
@{
    ViewBag.Title = "发布新目标";
}
<main class="container" style="margin-top:70px">
    <div id="notification" class="container">
        <span class="fa fa-calendar"></span>
        文章的评论已截屏保存，飞哥加油被涛咆哮赞，获得帮帮点 奖励2点
        <a href="723.html" style="float:right; color:#337ab7"><span class=" fa fa-hand-o-right "></span>全部消息</a>
    </div>
    <div style="font-size:35px;padding :20px"><span class="fa fa-edit"></span>发布新目标</div>
    <hr />
    <div class="row">
        <article class="col-md-6">
            <form>
                <div>
                    <div class="form-group">
                        <label style="font-weight:900">标题（必填）：</label>
                        <input type="text" class="form-control input-group" placeholder="简明扼要，多个目标分开发布">
                    </div>
                    <div class="form-group">
                        <label style="font-weight:900">详细说明：</label>
                        <textarea type="text" class="form-control input-group" placeholder="补充你认为需要说明的其他信息。比如："></textarea>
                    </div>
                    <div class="form-group">
                        <label style="font-weight:900">标题（必填）：</label>
                        <input type="text" class="form-control input-group" placeholder="多个标签之间请用空格分开">
                    </div>
                    <div class="form-group">
                        <label style="font-weight:900">开始执行（必填）：</label>
                        <input type="text" class="form-control input-group" placeholder="2021年3月4日">
                    </div>
                    <div class="form-group">
                        <label style="font-weight:900"><span class=" text-info fa fa-question-circle"></span>目标结束（必填）：</label>
                        <input type="text" class="form-control" placeholder="2021年3月4日">
                    </div>
                    <div class="form-group">
                        <label style="font-weight:900"><span class=" text-info fa fa-question-circle"></span>（每周）交作业时间：</label>
                        <table class="table table-bordered ">
                            <tbody>
                                <tr>
                                    <td>一</td>
                                    <td>二</td>
                                    <td>三</td>
                                    <td>四</td>
                                    <td>五</td>
                                    <td>六</td>
                                    <td>日</td>
                                </tr>
                                <tr>
                                    <td><input type="checkbox" checked /></td>
                                    <td><input type="checkbox" checked /></td>
                                    <td><input type="checkbox" checked /></td>
                                    <td><input type="checkbox" checked /></td>
                                    <td><input type="checkbox" checked /></td>
                                    <td><input type="checkbox" checked /></td>
                                    <td><input type="checkbox" checked /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div><br />
                    <div class="form-group ">
                        <label style="font-weight:900"><span class=" text-info fa fa-question-circle"></span> 每周可请假：</label>
                        <div class="input-group">
                            <select class="custom-select form-control">
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                            </select>
                            <div class="input-group-append">
                                <label class="input-group-text" for="inputGroupSelect02">天</label>
                            </div>
                        </div>

                    </div>
                    <div class="form-group ">
                        <label style="font-weight:900"><span class=" text-info fa fa-question-circle"></span>证明：</label><br />
                        <input style="margin-bottom:20px" type="text" class="form-control" placeholder="证据的文字描述">
                        <input type="text" class="form-control" placeholder="可以访问的网址，详见说明">
                    </div>
                    <div class="form-group">
                        <label style="font-weight:900"><span class=" text-info fa fa-question-circle"></span>好心人最多：</label>
                        <div class="input-group">
                            <select class="custom-select">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <div class="input-group-append">
                                <label class="input-group-text" for="inputGroupSelect02">人</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label style="font-weight:900"><span class=" text-info fa fa-question-circle"></span>未交作业罚金（必填）：（<a href="#">现有0枚</a><small class="fa fa-refresh" title="刷新"></small>）</label><br />
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input type="text" class="form-control" placeholder="正整数，建议10枚以上" aria-label="Amount (to the nearest dollar)">
                            <div class="input-group-append">
                                <span class="input-group-text">枚</span>
                            </div>
                        </div>
                        <a style="float:right" href="#"><span class=" text-info fa fa-question-circle">如何获得"帮帮币"</span></a>
                    </div>
                </div><br />
                <div>
                    <input class="btn btn-primary" type="button" value="提交">
                    <label><input type="checkbox" checked />继续</label>
                </div>
            </form>
        </article>
        @Html.Partial("_PlanNewPartial")
    </div>
</main>

